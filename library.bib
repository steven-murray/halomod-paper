  author = {Nishimichi, Takahiro and Takada, Masahiro and Takahashi, Ryuichi and Osato, Ken and Shirasaki, Masato and Oogi, Taira and Miyatake, Hironao and Oguri, Masamune and Murata, Ryoma and Kobayashi, Yosuke and Yoshida, Naoki},
