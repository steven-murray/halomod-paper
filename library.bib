  file = {/home/steven/Dropbox/PaperCatalogueZotero/Nature/2018/Bowman et al_2018_An absorption profile centred at 78 megahertz in the sky-averaged spectrum.pdf;/home/steven/Zotero/storage/ZDNSU7GD/nature25792.html},
